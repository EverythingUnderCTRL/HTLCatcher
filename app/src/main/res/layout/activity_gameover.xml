<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background_main"
  tools:context="org.htlanich.htlcatcher.game.stats.GameOverActivity">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="148dp"
      android:layout_marginTop="64dp"
      android:contentDescription="@string/htl_logo_description"
      app:srcCompat="@mipmap/ic_launcher_foreground" />
    <TextView
      android:id="@+id/textView2"
      android:layout_width="409dp"
      android:layout_height="49dp"
      android:layout_marginTop="8dp"
      android:fontFamily="sans-serif-black"
      android:gravity="center"
      android:text="@string/game_over_title"
      android:textSize="36sp" />
    <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="426dp"
      android:layout_height="150dp"
      android:layout_marginTop="80dp"
      android:orientation="vertical" >
      <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="40dp"
        android:text="@string/gave_over_new_game" />
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="end"
        android:text="@string/game_over_footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>
  </LinearLayout>
</android.support.constraint.ConstraintLayout>
